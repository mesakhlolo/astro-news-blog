---
const { post } = Astro.props;
import { getFormattedDate } from "../utils/global";
---

<div class="card">
  <div class="thumbnail">
    <img inferSize src={post.data.image} alt={post.data.title} />
  </div>
  <div class="card-body">
    <h5 class="card-title">
      <a href={`blog/${post.slug}`}>{post.data.title}</a>
    </h5>
  </div>
  <div class="card-footer">
    <div class="meta">
      <p>{post.data.author}</p>
      <span>&bull;&nbsp;</span>
      <time datetime={post.data.publishedAt}>
        {getFormattedDate(post.data.publishedAt)}
      </time>
    </div>
  </div>
</div>

<style>
  .thumbnail {
    height: 200px;
    background-color: #eeeeee;
    border-radius: 0.5rem;
  }

  .thumbnail img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-radius: 0.5rem;
  }

  .meta {
    display: flex;
    font-size: small;
  }

  .meta p {
    margin: 0;
    margin-right: 0.5rem;
  }
</style>
